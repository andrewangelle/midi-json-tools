{
  "name": "json-midi-message-encoder",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/json-midi-message-encoder/src",
  "projectType": "library",
  "tags": [],
  "implicitDependencies": ["midi-to-json"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/json-midi-message-encoder",
        "main": "packages/json-midi-message-encoder/src/index.ts",
        "tsConfig": "packages/json-midi-message-encoder/tsconfig.lib.json",
        "assets": ["packages/json-midi-message-encoder/*.md"]
      }
    },
    "linter": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx biome check . --apply {projectRoot}"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx biome format . --write {projectRoot}"
      }
    }
  }
}
