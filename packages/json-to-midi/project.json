{
  "name": "json-to-midi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/json-to-midi/src",
  "projectType": "library",
  "tags": [],
  "implicitDependencies": ["json-midi-message-encoder"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/json-to-midi",
        "main": "packages/json-to-midi/src/index.ts",
        "tsConfig": "packages/json-to-midi/tsconfig.lib.json",
        "assets": ["packages/json-to-midi/*.md"]
      }
    },
    "linter": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx biome check . --apply {projectRoot}"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx biome format . --write {projectRoot}"
      }
    }
  }
}
