{
  "name": "midi-json-tools",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "test": "turbo run test",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "ci:publish": "npm run build && npx changeset publish",
    "ci:version": "npx changeset version && node ./scripts/versionJSR.mjs && npm i && npx biome format packages --write"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx biome check packages --write",
      "npx biome format packages --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.5"
  },
  "packageManager": "npm@10.0.0"
}
