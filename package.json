{
  "name": "midi-json-tools",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "test": "turbo run test",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "example:json-to-midi": "node ./examples/json-to-midi.mjs",
    "example:midi-to-json": "node ./examples/midi-to-json.mjs",
    "example:clean": "rm -rf ./examples/example-output && mkdir ./examples/example-output",
    "examples": "npm run build && npm run example:clean && npm run example:json-to-midi && npm run example:midi-to-json",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "ci:publish": "npm run build && npx changeset publish",
    "ci:version": "npx changeset version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx biome check packages --write",
      "npx biome format packages --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@types/node": "18.16.9",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "turbo": "^2.0.4",
    "typescript": "~5.4.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "~3.8.1",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.5"
  },
  "packageManager": "npm@10.0.0"
}
