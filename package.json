{
  "name": "midi-json-tools",
  "private": true,
  "license": "MIT",
  "scripts": {
    "checks": "pnpm build && pnpm lint && pnpm test && pnpm test:types",
    "test": "turbo run test",
    "test:types": "turbo run test:types",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "ci:publish": "pnpm build && pnpm exec changeset publish",
    "ci:version": "pnpm exec changeset version && node ./scripts/versionJSR.mjs && pnpm install && pnpm exec biome format packages --write"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm exec biome check packages --write",
      "pnpm exec biome format packages --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.5+sha512.845196026aab1cc3f098a0474b64dfbab2afe7a1b4e91dd86895d8e4aa32a7a6d03049e2d0ad770bbe4de023a7122fb68c1a1d6e0d033c7076085f9d5d4800d4"
}
